{
  "name": "zeerna-ui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Simple and Accessible UI components for React Applications",
  "keywords": [
    "design",
    "system",
    "components",
    "stitches",
    "typescript",
    "storybook",
    "react",
    "ui",
    "zeerna"
  ],
  "scripts": {
    "dev": "yarn run storybook",
    "lib:build": "lerna run build",
    "compile": "lerna run compile --stream",
    "publishAll": "lerna run publish",
    "storybook": "start-storybook",
    "lint": "eslint packages/**/src/*.{ts,tsx}",
    "format": "prettier --write packages/**/src/*.{ts,tsx}",
    "prepare": "husky install",
    "commitmsg": "prepare-commit-msg"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": "git@github.com:elicavalheiro/zeerna-ui.git",
  "author": "Eli Cavalheiro <elimara.ac@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@stitches/react": "^1.2.5",
    "@storybook/react": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
