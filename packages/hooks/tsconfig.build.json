{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "src/*.test.tsx"],
  "include": ["src/**/*"]
}